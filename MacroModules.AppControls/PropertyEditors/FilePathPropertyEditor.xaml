<local:BasePropertyEditor x:Name="filePathPropertyEditor" 
                          x:Class="MacroModules.AppControls.PropertyEditors.FilePathPropertyEditor"
                          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                          xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                          xmlns:local="clr-namespace:MacroModules.AppControls.PropertyEditors"
                          mc:Ignorable="d" 
                          d:DesignHeight="450" d:DesignWidth="800"
                          Loaded="FilePathPropertyEditor_Loaded">
    <StackPanel>
        <TextBlock Text="{Binding PropertyName, ElementName=filePathPropertyEditor}" ToolTip="{Binding PropertyDescription, ElementName=filePathPropertyEditor}"/>

        <TextBlock Text="{Binding FileNamePreview, ElementName=filePathPropertyEditor}"/>

        <Button Content="Select File" Click="Button_Click" Margin="0, 5, 0, 0" HorizontalAlignment="Right"/>
    </StackPanel>
</local:BasePropertyEditor>
