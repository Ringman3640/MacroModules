<local:BasePropertyEditor x:Name="boolPropertyEditor" 
                          x:Class="MacroModules.AppControls.PropertyEditors.BoolPropertyEditor"
                          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                          xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                          xmlns:local="clr-namespace:MacroModules.AppControls.PropertyEditors"
                          mc:Ignorable="d" 
                          d:DesignHeight="450" d:DesignWidth="800"
                          Loaded="BoolPropertyEditor_Loaded">
    <StackPanel>
        <TextBlock Text="{Binding PropertyName, ElementName=boolPropertyEditor}" ToolTip="{Binding PropertyDescription, ElementName=boolPropertyEditor}"/>

        <CheckBox IsChecked="{Binding IsSet, ElementName=boolPropertyEditor}"/>
    </StackPanel>
</local:BasePropertyEditor>
