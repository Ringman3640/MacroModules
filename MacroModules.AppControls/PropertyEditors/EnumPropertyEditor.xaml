<local:BasePropertyEditor x:Name="enumPropertyEditor"
                          x:Class="MacroModules.AppControls.PropertyEditors.EnumPropertyEditor"
                          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                          xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                          xmlns:local="clr-namespace:MacroModules.AppControls.PropertyEditors"
                          xmlns:appcontrols="clr-namespace:MacroModules.AppControls"
                          mc:Ignorable="d" 
                          d:DesignHeight="450" d:DesignWidth="800"
                          Loaded="EnumPropertyEditor_Loaded">
    <StackPanel>
        <TextBlock Text="{Binding PropertyName, ElementName=enumPropertyEditor}" ToolTip="{Binding PropertyDescription, ElementName=enumPropertyEditor}"/>

        <ComboBox ItemsSource="{Binding EnumArray, ElementName=enumPropertyEditor}" SelectedItem="{Binding SelectedEnum, ElementName=enumPropertyEditor}"/>
    </StackPanel>
</local:BasePropertyEditor>
