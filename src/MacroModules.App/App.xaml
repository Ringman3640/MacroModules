<Application x:Class="MacroModules.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MacroModules.App"
             xmlns:converters="clr-namespace:MacroModules.App.Converters"
             StartupUri="Views/WorkspaceView.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <converters:HalveDoubleConverter x:Key="HalveDoubleConverter"/>
                </ResourceDictionary>
                <ResourceDictionary Source="/Styles/StandardLayoutStyles.xaml"/>
                <ResourceDictionary Source="/Styles/StandardThemes.xaml"/>
                <ResourceDictionary Source="/Styles/LabelStyles.xaml"/>
                <ResourceDictionary Source="/Templates/TextBoxTemplates.xaml"/>
                <ResourceDictionary Source="/Templates/ComboBoxTemplates.xaml"/>
                <ResourceDictionary Source="/Templates/ButtonTemplates.xaml"/>
                <ResourceDictionary Source="/Resources/Images/Modules/ModuleIcons.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
