<local:BasePropertyEditor x:Name="numberPropertyEditor"
                          x:Class="MacroModules.AppControls.PropertyEditors.NumberPropertyEditor"
                          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                          xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                          xmlns:local="clr-namespace:MacroModules.AppControls.PropertyEditors"
                          xmlns:appcontrols="clr-namespace:MacroModules.AppControls"
                          mc:Ignorable="d" 
                          d:DesignHeight="450" d:DesignWidth="800"
                          Loaded="NumberPropertyEditor_Loaded">
    <StackPanel>
        <TextBlock Text="{Binding PropertyName, ElementName=numberPropertyEditor}" ToolTip="{Binding PropertyDescription, ElementName=numberPropertyEditor}"/>

        <appcontrols:FocusTextBox Text="{Binding NumberEntryText, ElementName=numberPropertyEditor}"/>
    </StackPanel>
</local:BasePropertyEditor>
