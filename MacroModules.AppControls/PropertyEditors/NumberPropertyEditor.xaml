<local:BasePropertyEditor x:Name="numberPropertyEditor"
                          x:Class="MacroModules.AppControls.PropertyEditors.NumberPropertyEditor"
                          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                          xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                          xmlns:local="clr-namespace:MacroModules.AppControls.PropertyEditors"
                          xmlns:appcontrols="clr-namespace:MacroModules.AppControls"
                          mc:Ignorable="d" 
                          d:DesignHeight="450" d:DesignWidth="800"
                          Loaded="PropertyEditor_Loaded" Unloaded="PropertyEditor_Unloaded">
    <appcontrols:FocusTextBox x:Name="labelTarget"
                              Text="{Binding NumberEntryText, ElementName=numberPropertyEditor}"
                              AccessibleName="{Binding AccessibleName, ElementName=numberPropertyEditor}"/>
</local:BasePropertyEditor>
